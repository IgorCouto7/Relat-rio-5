#include <iostream>
using namespace std;

float somarArray(float arr[], int tamanho) {
    float soma = 0.0;
    for (int i = 0; i < tamanho; i++) {
        soma += arr[i];
    }
    return soma;
}

int main() {
    int tamanho;
    cout << "Digite o tamanho";
    cin >> tamanho;

    float arr[tamanho];
    for (int i = 0; i < tamanho; i++) {
        cout << "Digite o valor do elemento " << i + 1 << ": ";
        cin >> arr[i];
    }

    cout << "SomatÃ³rio: " << somarArray(arr, tamanho) << endl;
    return 0;
}
